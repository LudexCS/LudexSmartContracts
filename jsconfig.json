{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "contracts/*": ["build/contracts/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "build/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.js"
  ]
}